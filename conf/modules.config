/*
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Config file for defining DSL2 per module options and publishing paths
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Available keys to override module options:
        ext.args   = Additional arguments appended to command in module.
        ext.args2  = Second set of arguments appended to command in module (multi-tool modules).
        ext.args3  = Third set of arguments appended to command in module (multi-tool modules).
        ext.prefix = File name prefix for output files.
----------------------------------------------------------------------------------------
*/

process {

    publishDir = [
        path: { "${params.outdir}/${task.process.tokenize(':')[-1].tokenize('_')[0].toLowerCase()}" },
        mode: params.publish_dir_mode,
        saveAs: { filename -> filename.equals('versions.yml') ? null : filename }
    ]
    withName: METADATA_TO_SAMPLESHEET {
        publishDir = [
            path:"${params.outdir}",
            mode: params.publish_dir_mode        ]
    }
    withName: BWAMEM2_MEM {
        ext.prefix = { "${meta.id}" }
        publishDir = [
            enabled: false
        ]
    }
    withName: SAVE_REFERENCE {
        publishDir = [
            path:"${projectDir}",
            mode: params.publish_dir_mode,
            pattern: "reference"
        ]
    }
    withName: BWAMEM2_INDEX {
        ext.prefix = { "${meta.id}" }
        publishDir = [
            enabled: false
        ]
    }
    withName: SAMTOOLS_FAIDX {
        ext.prefix = { "${meta.id}" }
        publishDir = [
            enabled: false
        ]
    }
    withName: SAMTOOLS_SORT {
        ext.prefix = { "${meta.id}.sorted" }
        publishDir = [
            enabled: false
        ]
    }
    withName: SAMTOOLS_INDEX {
        ext.prefix = { "${meta.id}" }
        publishDir = [
            enabled: false
        ]
    }
    withName: FASTQC {
        ext.args = '--quiet'
        publishDir = [
            enabled: false
        ]
    }
    withName: CAT_FASTQ {
        publishDir = [
            enabled: false
        ]
    }
    withName: FASTP {
        publishDir = [
            enabled: false
        ]
    }
    withName: MULTIQC {
        ext.args   = { params.multiqc_title ? "--title \"$params.multiqc_title\"" : '' }
        publishDir = [
            path: { "${params.outdir}/multiqc" },
            mode: params.publish_dir_mode,
            saveAs: { filename -> filename.equals('versions.yml') ? null : filename }
        ]
    }
    withName: PICARD_ADDORREPLACEREADGROUPS {
        ext.args =  { [
            "--VALIDATION_STRINGENCY LENIENT",
            "--RGLB lib",
            "--RGPL platform",
            "--RGPU barcode",
            "--RGSM ${meta.id}",
            "--TMP_DIR ."
            ].join(' ').trim() }
        publishDir = [
            enabled: false
        ]
    }
    withName: PICARD_MARKDUPLICATES {
        ext.prefix = { "${meta.id}.md" }
        ext.args   = { '--CREATE_INDEX' }
        publishDir = [
            enabled: false
        ]
    }
    withName: MOSDEPTH {
        ext.prefix = { "${meta.id}" }
        publishDir = [
            path:"${params.outdir}/mosdepth/",
            pattern: "*{.bed.gz,.summary.txt}",
            mode: params.publish_dir_mode
        ]
    }
    withName: CONVERT_BED_CHROM {
        ext.prefix = { "${meta.id}" }
        publishDir = [
            enabled: false
        ]
    }
    withName: COMPARE_THRESHOLD {
        ext.prefix = { "${meta.id}" }
        publishDir = [
            path:"${params.outdir}/compare_threshold/",
            pattern: "*{.csv}",
            mode: params.publish_dir_mode
        ]
    }
    withName: MERGE_REPORTS {
        ext.prefix = { "${meta.id}" }
        publishDir = [
            path:"${params.outdir}",
            pattern: "*{.csv,.xlsx}",
            mode: params.publish_dir_mode
        ]
    }
}
